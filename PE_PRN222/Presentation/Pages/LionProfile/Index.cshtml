@page
@model Presentation.Pages.LionProfile.IndexModel
@{
    ViewData["Title"] = "Profile List";
}

<h2>Profile List</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (Model.RoleId == 1 || Model.RoleId == 2)
{
    <div class="mb-3">
        <a asp-page="Create" class="btn btn-primary">Create New</a>
    </div>
}

<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-3">
            <input type="text" name="weight" class="form-control" placeholder="Search by Weight" value="@Model.SearchWeight" />
        </div>
        <div class="col-md-3">
            <input type="text" name="typeName" class="form-control" placeholder="Search by Type Name" value="@Model.SearchTypeName" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-info">Search</button>
        </div>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Type</th>
            <th>Weight</th>
            <th>Characteristics</th>
            <th>Warning</th>
            <th>Modified Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="profileTableBody">
        @foreach (var item in Model.Profiles)
        {
            <tr id="row-@item.LionProfileId">
                <td>@item.LionProfileId</td>
                <td>@item.LionName</td>
                <td>@item.LionType?.LionTypeName</td>
                <td>@item.Weight</td>
                <td>@item.Characteristics</td>
                <td>@item.Warning</td>
                <td>@item.ModifiedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (Model.RoleId == 1 || Model.RoleId == 2)
                    {
                        <a asp-page="Update" asp-route-id="@item.LionProfileId" class="btn btn-sm btn-warning">Edit</a>
                        <button onclick="confirmDelete(@item.LionProfileId)" class="btn btn-sm btn-danger">Delete</button>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-page="Index" asp-route-pageNumber="@i" asp-route-weight="@Model.SearchWeight" asp-route-typeName="@Model.SearchTypeName">@i</a>
                </li>
            }
        </ul>
    </nav>
}
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/hub")
            .build();

        connection.on("ProfileDeleted", function (id) {
            const row = document.getElementById("row-" + id);
            if (row) {
                row.remove();
            }
        });

        connection.start().catch(function (err) {
            console.error(err.toString());
        });

        function confirmDelete(id) {
            if (confirm("Are you sure you want to delete this profile?")) {
                fetch('/LionProfile/Delete?handler=Delete&id=' + id, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (!data.success) {
                        alert(data.message || "Failed to delete");
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert("An error occurred");
                });
            }
        }
    </script>
}
