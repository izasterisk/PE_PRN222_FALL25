@page
@model Presentation.Pages.LionProfile.UpdateModel
@{
    ViewData["Title"] = "Update Profile";
}

<h2>Update Profile</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post">
    <input type="hidden" name="LionProfileId" value="@Model.LionProfile?.LionProfileId" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name="LionName" value="@Model.LionProfile?.LionName" />
    </div>

    <div class="mb-3">
        <label class="form-label">Type</label>
        <select class="form-control" name="LionTypeId">
            @foreach (var type in Model.Types)
            {
                <option value="@type.LionTypeId" selected="@(type.LionTypeId == Model.LionProfile?.LionTypeId)">@type.LionTypeName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Weight</label>
        <input type="number" step="0.01" class="form-control" name="Weight" value="@Model.LionProfile?.Weight" />
    </div>

    <div class="mb-3">
        <label class="form-label">Characteristics</label>
        <textarea class="form-control" name="Characteristics" rows="3">@Model.LionProfile?.Characteristics</textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Warning</label>
        <textarea class="form-control" name="Warning" rows="3">@Model.LionProfile?.Warning</textarea>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>
